API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Tipos de backend
APP_MODEL_TYPE=statistical
APP_STORAGE_TYPE=filesystem
APP_METRICS_TYPE=memory

# Config do modelo statistical
APP_STATISTICAL__THRESHOLD=3.0

# Config do modelo sklearn
APP_SKLEARN__CONTAMINATION=0.1
APP_SKLEARN__N_ESTIMATORS=100

# Config do storage filesystem
APP_FILESYSTEM__STORAGE_PATH=./model_storage

# Config do storage S3
APP_S3__BUCKET=
APP_S3__PREFIX=models

# Config de métricas memory
APP_MEMORY__MAX_SAMPLES=10000

# Config de métricas prometheus
APP_PROMETHEUS__NAMESPACE=anomaly_detection

LOG_LEVEL=INFO

CORS_ORIGINS=*
